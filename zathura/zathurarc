set default-bg                  rgba(0,0,0,0.8)
set default-fg                  "#ffffff"

set statusbar-bg                "#222222"
set statusbar-fg                "#ffffff"

set inputbar-bg                 "#222222"
set inputbar-fg                 "#ffffff"

set notification-bg             "#555555"
set notification-fg             "#ffffff"

set notification-error-bg       "#3a3a3a"
set notification-error-fg       "#ffffff"

set notification-warning-bg     "#3a3a3a"
set notification-warning-fg     "#9da98d"

set highlight-color             "#cb7073"
set highlight-active-color      "#6F8798"

set completion-bg               "#606060"
set completion-fg               "#6F8798"

set completion-highlight-fg     "#b48ead"
set completion-highlight-bg     "#83c07c"

set recolor-lightcolor          "#000000"
set recolor-darkcolor           "#ffffff"

# recolor-lightcolor Defines the color value that is used to represent light colors in recoloring mode
# recolor-darkcolor Defines the color value that is used to represent dark colors in recoloring mode
set recolor-lightcolor          rgba(0,0,0,0)

# Get rid of statusbar by default


set recolor-keephue             "true"
set recolor                     "true"

set font "cascadiacode regular 12"


map <C-r> reload
map <C-j> zoom in
map <C-k> zoom out
